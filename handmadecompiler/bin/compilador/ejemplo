peperoni
begin
  uinteger VAR_U;
  U_VARIABLE;

  single FUN f(uinteger X, single Y)
	begin
	  uinteger XP;
	  
	  single FUN fi(uinteger XI, single YI)
	  begin
		IF (XI = YI) THEN
		begin
		    XI := YI + 2;
			REPEAT
			  begin
				XI := XI + 1;
				RET (XI);
			  end
			UNTIL (XI > 100);
			RET (YI);
		end
	  end

	  XP := fi(X,X+100.2);
	  RET (XP);
	end

	single VAR_SINGLE;
	VAR_SINGLE := f(100,200.5);

end
