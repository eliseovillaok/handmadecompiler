peperoni
begin
  uinteger VAR_U;
  U_VARIABLE;

  single FUN f(uinteger X)
	begin
	  uinteger XP;
	  
	  single FUN fi(uinteger XI)
	  begin
		IF (XI = YI) THEN
			begin
		    XI := YI + 2;
			REPEAT
			BEGIN
				XI := XI + 1;
				RET (XI);
			END
			UNTIL (XI > 100);
			RET (YI);
			END
		end_if;
	  end

	  XP := fi(X);
	  RET (XP);
	end

	single VAR_SINGLE;
	VAR_SINGLE := f(100);

end
